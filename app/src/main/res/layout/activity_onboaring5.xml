<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="24dp"
    tools:context=".Onboaring5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Back button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_bg_light"
            android:padding="10dp"
            android:src="@drawable/back"
            android:contentDescription="Back button" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="16dp" />

        <!-- Full Name Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_marginTop="32dp" />

        <!-- Full Name Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:paddingBottom="4dp"
            android:background="@drawable/underline_input">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/user"
                android:layout_marginEnd="8dp"
                android:contentDescription="User icon" />

            <EditText
                android:id="@+id/btnUserName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Aimal Naseem"
                android:textColor="#000000"
                android:textSize="16sp"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:inputType="textPersonName" />
        </LinearLayout>

        <!-- Phone Number Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card Number"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_marginTop="20dp" />

        <!-- Phone Number Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:paddingBottom="4dp"
            android:background="@drawable/underline_input">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/cardnumber"
                android:layout_marginEnd="8dp"
                android:contentDescription="Phone icon" />

            <EditText
                android:id="@+id/cardnumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="0000 0000 0000 0000"
                android:textColor="#000000"
                android:textSize="16sp"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:inputType="phone" />
            <ImageView
                android:id="@+id/ic_card"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:paddingEnd="8dp"
            android:layout_gravity="end">

            <!-- Counter text -->
            <TextView
                android:id="@+id/txt_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="0/16"
                android:textColor="#666666"
                android:textSize="13sp"
                android:fontFamily="sans-serif-medium"
                android:background="@drawable/bg_counter_chip"
                android:elevation="1dp"/>
        </FrameLayout>
        <!-- Phone Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_marginTop="20dp" />
        <!-- Phone Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:paddingBottom="4dp"
            android:background="@drawable/underline_input">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/phone"
                android:layout_marginEnd="8dp"
                android:contentDescription="Email icon" />

            <EditText
                android:id="@+id/btnPhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="000 0000 0000"
                android:textColor="#000000"
                android:textSize="16sp"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:inputType="textEmailAddress" />
        </LinearLayout>



        <!-- Sign Up Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="40dp"
            android:text="Sign Up"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/btn_rounded_blue"
            android:fontFamily="sans-serif-medium"
            android:elevation="0dp" />

        <!-- Already have an account -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account. "
                android:textColor="#777777"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textColor="#0066FF"
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
