<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp"
    tools:context=".Onboaring6">

    <!-- ðŸ‘¤ Foydalanuvchi Header -->
    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:src="@drawable/user"
        android:background="@drawable/circle_bg_light"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/userInfoLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/imgProfile"
        app:layout_constraintTop_toTopOf="@id/imgProfile"
        app:layout_constraintBottom_toBottomOf="@id/imgProfile"
        app:layout_constraintEnd_toStartOf="@id/btnSearch">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome back,"
            android:textColor="#777777"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="#000000" />
    </LinearLayout>

    <ImageView
        android:id="@+id/btnSearch"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/search"
        app:layout_constraintTop_toTopOf="@id/imgProfile"
        app:layout_constraintBottom_toBottomOf="@id/imgProfile"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ðŸ’³ Kredit karta -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardContainer"
        android:layout_width="0dp"
        android:layout_height="190dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/imgProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/bgCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/cardd"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvCardNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="---- ---- ---- ----"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:id="@+id/tvCardHolder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Card Holder"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp" />

                <!-- ðŸ”¸ Expiry Date va CVV qismlari olib tashlandi -->

                <ImageView
                    android:id="@+id/imgCardLogo"
                    android:layout_width="48dp"
                    android:layout_height="36dp"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="32dp"
                    android:src="@drawable/mastercard" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
